@model IEnumerable<Mango.Web.Models.ProductDto>


<br /><br />

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Products</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-primary"><i class="fas fa-plus"></i> Create Product</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Price
                </th>
                <th>
                    CategoryName
                </th>
              
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var p in Model)
            {
                <tr>
                    <td>
                        @p.Name
                    </td>
                    <td>
                        @p.Price.ToString("C")
                    </td>
                   
                    <td>
                        @p.CategoryName
                    </td>
                    <td>
                        <a asp-action="ProductEdit" asp-route-id="@p.ProductId" class="btn btn-success"><i class="fas fa-edit"></i></a>
                        <a asp-action="ProductDelete" asp-route-id="@p.ProductId" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>